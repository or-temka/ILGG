{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": { "@shared/*": ["../shared/*"] },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
